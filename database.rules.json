{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "name": {
          ".read": true,
          ".validate": "newData.isString()"
        },
        "phone": {
          ".read": true,
          ".validate": "newData.isString()"
        },
        "profilePicture": {
          ".read": true,
          ".validate": "newData.isString()"
        },
        "college": {
          ".read": true,
          ".validate": "newData.isString()"
        },
        "email": {
          ".read": true,
          ".validate": "newData.isString()"
        },
        "password": {
          ".read": false,
          ".write": false
        },
        "tokens": {
          ".read": "auth.uid == $uid"
        }
      }
    },
    "trips": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["creatorCollege", "creatorId"],
      "$tripId": {
        ".read": true,
        ".write": "auth != null",
        "requests": {
          ".read": true,
          ".write": "auth != null",
          "$userId": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['userId', 'userName', 'userEmail', 'status', 'requestedAt'])",
            "status": {
              ".validate": "newData.isString() && (newData.val() === 'pending' || newData.val() === 'approved' || newData.val() === 'rejected')"
            },
            "userId": {
              ".validate": "newData.val() === $userId"
            },
            "userName": {
              ".validate": "newData.isString()"
            },
            "userEmail": {
              ".validate": "newData.isString()"
            },
            "requestedAt": {
              ".validate": "newData.isNumber()"
            }
          }
        },
        "messages": {
          ".read": true,
          ".write": "auth != null",
          ".indexOn": ["timestamp"],
          "$messageId": {
            ".read": true,
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['text', 'userId', 'userName', 'timestamp'])",
            "text": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 1000"
            },
            "userId": {
              ".validate": "newData.val() === auth.uid"
            },
            "userName": {
              ".validate": "newData.isString() && newData.val().length > 0"
            },
            "userPhotoURL": {
              ".validate": "newData.val() === null || newData.isString()"
            },
            "timestamp": {
              ".validate": "newData.val() === now || newData.isNumber()"
            }
          }
        }
      }
    }
  }
}
